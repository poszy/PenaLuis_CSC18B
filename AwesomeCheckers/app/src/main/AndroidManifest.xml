<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="poszmod.awesome" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="poszmod.awesome.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="poszmod.awesome.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="poszmod.awesome.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="poszmod.awesome.MainActivity" />
        </activity>
        <activity
            android:name="poszmod.awesome.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="poszmod.awesome.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="poszmod.awesome.RegistrationActivity"
            android:label="@string/title_activity_registration" >
            <intent-filter>
                <action android:name="poszmod.awesomecheckers.RegistrationActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="poszmod.awesome.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="poszmod.awesomecheckers.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="poszmod.awesome.ErrorLoginActivity"
            android:label="@string/title_activity_error_login" >
        </activity>
    </application>

</manifest>
